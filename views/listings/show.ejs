<% layout("layouts/boilerplate") -%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3> 
  </div>

  <div class="card col-6 offset-3 show-card">
    <img src="<%= listing.image.url %>" alt="listing_image" class="card-img-top show-img">
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %><br>
        &#8377; <%= Number(listing.price).toLocaleString("en-IN") %><br>
        <%= listing.location %><br>
        <%= listing.country %><br>
      </p>
    </div>
  </div>
</div>

<div class="btns text-center mt-3">
  <a href="/listings/<%= listing._id %>/edit" class="edit-btn btn btn-warning me-2">Edit</a>
  <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display: inline;">
    <button class="delete-btn btn btn-danger">Delete</button>
  </form>
</div>

<div>
  <hr>
  <h4> 
    Leave a review
  </h4>
  <form action="">
    <div>
      <label for="rating"class="form-label">Rating</label>
      <input type="range" min="1" max="5" id="rating" name="review[rating]">
    </div>
    <div>
      <label for="comment" class="form-label">comment</label>
      <textarea name="review[comment]" id="comment" class="form-control"></textarea>
    </div>
    <br>
    <button class="delete-btn btn btn-danger">submit</button>
  </form>
</div>
